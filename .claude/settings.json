{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run typecheck)",
      "Bash(npm run test:*)",
      "Bash(pnpm run lint)",
      "Bash(pnpm run typecheck)",
      "Bash(pnpm run test:*)",
      "Read(~/.zshrc)",
      "Read(./.env.example)"
    ],
    "deny": [
      "Bash(curl:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Read(./credentials/**)"
    ]
  },
  "enabledPlugins": {
    "frontend-design@claude-code-plugins": true
  },
  "alwaysThinkingEnabled": true,
  "language": "japanese"
}
